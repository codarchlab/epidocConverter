              <w lemma="ὁ"><seg type="autopsy">το</seg>ῦ</w>
              <persName type="aphrodisian">
                <name reg="Ἄτταλος">Ἀτ<lb n="3" type="worddiv"/><seg type="autopsy"><unclear reason="damage">τά</unclear></seg>λ<seg type="autopsy"><unclear reason="damage">ο</unclear></seg>υ</name>
